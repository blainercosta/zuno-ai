{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["vite-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "components/**/*.tsx", "hooks/**/*.ts", "lib/**/*.ts", "types/**/*.ts", "utils/**/*.ts"],
  "exclude": ["vite.config.ts", "servers/**/*", "node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
