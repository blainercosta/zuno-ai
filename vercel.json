{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/og-news.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/noticias-ia/(?<slug>.+)",
      "dest": "/api/og-news?slug=$slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|WhatsApp|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Discordbot|Googlebot|bingbot).*"
        }
      ]
    }
  ]
}
