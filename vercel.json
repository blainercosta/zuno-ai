{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    {
      "source": "/noticias-ia/:slug*",
      "destination": "/api/og-news?slug=:slug*",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|WhatsApp|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Discordbot|Googlebot|bingbot).*"
        }
      ]
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/og-news.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
