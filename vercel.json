{
  "routes": [
    {
      "src": "/noticias-ia/(.+)",
      "dest": "/api/og-news?slug=$1",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|WhatsApp|Twitterbot|LinkedInBot|Slackbot|TelegramBot|Discordbot|Googlebot|bingbot).*"
        }
      ]
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/og-news.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
